<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#27232b"
    android:orientation="vertical"
    tools:context="phamhaidang.itplus.vn.truyenapp.Activity.MangaDetailActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="#222224"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btback_detailmanga"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_back_button"
            android:src="@drawable/icback" />

        <TextView
            android:id="@+id/txttitle_detailmangatoolbar"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Hajime no Ippo"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="25dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#FFF"></LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_manadetail"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/img_avatar_detailmanga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_name_detailmanga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hajime no Ippo"
                        android:textColor="#ed3f17"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_author_detailmanga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Tác giả: Morikia wa"
                        android:textColor="#FFF"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/txt_status_detailmanga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trạng thái: Còn ra"
                        android:textColor="#FFF"
                        android:textSize="20dp" />

                    <RatingBar
                        android:id="@+id/ratingbar_detailmanga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressBackgroundTint="#f2b1eb"
                        android:progressTint="#e4db1b"
                        android:rating="1.65"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        android:stepSize="0.1"
                        android:transformPivotX="1dp"
                        android:transformPivotY="0dp" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="#27232b"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border_tabshape_mangadetail"
                    android:gravity="center">
                    <Button
                        android:id="@+id/tableft_detailmanga"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="#FFFF"
                        android:text="Info" />

                    <Button
                        android:id="@+id/tabright_detailmanga"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/tabright_mangadetail"
                        android:text="Chapters" />
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/Content_Tabdetailmanga"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"></FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>