<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#222224"
    >
    <ImageView
        android:id="@+id/iconback_detailmangatoolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_toRightOf="@id/iconback_detailmangatoolbar"
        android:textColor="#5030f6"
        android:textSize="30dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txttitle_detailmangatoolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_centerHorizontal="true"
        android:text="Tieu de"
        android:textColor="#FFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/imgfavorite_detailmangatoolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>